<%= form_with(model: @article, local: true) do |form| %>
    <div class="field">
        <%=form.label :title %>
        <%=form.text_field :title %>
    </div>

    <div class="field">
        <%=form.label :content %>
        <%=form.rich_text_area :content %>
    </div>
    
    <div>
        <%= form.submit "Save", class: "btn btn-primary my-2" %>
    </div>
<%end%>