<div class="large-container center-block">
    <h1><%=@article.title%></h1>
    <p class="text-secondary">Author: <strong><%= @article.user.email %></strong></p>
    <div>
        <%= @article.content %>
    </div>

    <% if user_signed_in? %>
        <div>
            <%=link_to "Edit article", edit_article_path %>
            <%=link_to "Delete article", @article, method: :delete %>
        </div>
    <% end %>
</div>