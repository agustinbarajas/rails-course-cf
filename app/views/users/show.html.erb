<div class="small-container center-block">
    <h3>My profile</h3>

    <div class="text-center">
        <% if current_user.avatar.attached? %>
            <%= image_tag url_for(current_user.avatar), heigth: 100, class: "avatar" %>
        <% end %>
    </div>

    <div class="text-center mt-3">
        <label>Email:</label>
        <%= current_user.email %>
    </div>

    <%= link_to "Edit", edit_users_path, class: "btn btn-primary mt-2"%>
</div>